<?xml version="1.0" encoding="utf-8"?>
<Template xmlns="http://wirecloud.conwet.fi.upm.es/ns/template#">

    <Catalog.ResourceDescription>
        <Vendor>Wirecloud</Vendor>
        <Name>api-test</Name>
        <DisplayName>Wirecloud API test</DisplayName>
        <Version>0.9</Version>
        <Author>aarranz</Author>
        <Mail>aarranz@conwet.com</Mail>
        <Description>This widget is used to test some of the features of the Wirecloud platform</Description>
        <ImageURI>images/catalogue.png</ImageURI>
        <iPhoneImageURI>images/smartphone.png</iPhoneImageURI>
        <WikiURI>doc/index.html</WikiURI>
    </Catalog.ResourceDescription>

    <Platform.Preferences>
        <Preference name="text" type="text" label="text" description="text preference" default="initial text"/>
        <Preference name="unused_list" type="list" label="unused list pref" description="unused preference" default="1">
            <Option value="1" name="value1"/>
        </Preference>
        <Preference name="unused_text" type="text" label="unused text pref" description="unused preference" default="unused value"/>
        <Preference name="unused_boolean" type="boolean" label="unused boolean pref" description="unused preference" default="false"/>
        <Preference name="unused_password" type="password" label="unused password pref" description="unused preference" default="unused value"/>
    </Platform.Preferences>

    <Platform.StateProperties>
        <Property name="prop" type="text" label="prop"/>
    </Platform.StateProperties>

    <Platform.Wiring>
        <InputEndpoint name="inputendpoint" type="text" label="Input" friendcode="test-data"/>
        <OutputEndpoint name="outputendpoint" type="text" label="Output" friendcode="test-data"/>
    </Platform.Wiring>

    <Platform.Link>
        <XHTML href="test.html"/>
    </Platform.Link>
    <Platform.Rendering width="6" height="24"/>

</Template>
